<Window x:Class="WSPPCars.MojeKonto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Moje Konto" Height="450" Width="700"
        Background="#303030" FontFamily="Bahnschrift">
    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0">
            <TextBlock Text="Informacje o koncie"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
            <Border Width="542"
                    Padding="20"
                    Background="#202020"
                    CornerRadius="10"
                    BorderBrush="#FFFF5D00"
                    BorderThickness="2"
                    Height="Auto">
                <StackPanel>
                    <TextBlock Text="Imię i nazwisko:" Foreground="White"/>
                    <TextBlock x:Name="lblImieNazwisko" Text="..." FontWeight="Bold" Foreground="#FFFF5D00" Margin="0,0,0,10"/>

                    <TextBlock Text="Adres e-mail:" Foreground="White"/>
                    <TextBlock x:Name="lblEmail" Text="..." FontWeight="Bold" Foreground="#FFFF5D00" Margin="0,0,0,10"/>

                    <TextBlock Text="Data rejestracji:" Foreground="White"/>
                    <TextBlock x:Name="lblDataRejestracji" Text="..." FontWeight="Bold" Foreground="#FFFF5D00" Margin="0,0,0,20"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button Content="Edytuj"
                                Width="100"
                                Click="BtnEdytuj_Click"
                                FontWeight="Bold"
                                Foreground="Black">
                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="#FFFF5D00"
                                            CornerRadius="15"
                                            BorderBrush="#EEEE4C00"
                                            BorderThickness="2"
                                            x:Name="border">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#DDDD4C00"/>
                                            <Setter TargetName="border" Property="BorderBrush" Value="#DDDD4C00"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button Content="Moje zamówienia"
                                Width="130"
                                Click="BtnZamowienia_Click"
                                FontWeight="Bold"
                                Foreground="Black">
                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="#FFFF5D00"
                                            CornerRadius="15"
                                            BorderBrush="#EEEE4C00"
                                            BorderThickness="2"
                                            x:Name="border">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#DDDD4C00"/>
                                            <Setter TargetName="border" Property="BorderBrush" Value="#DDDD4C00"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button Content="Wyloguj się"
                                Width="100"
                                Click="BtnWyloguj_Click"
                                FontWeight="Bold"
                                Foreground="Black">
                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="White"
                                            CornerRadius="15"
                                            BorderBrush="#FFFF5D00"
                                            BorderThickness="2"
                                            x:Name="border">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#DDDDDD"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
