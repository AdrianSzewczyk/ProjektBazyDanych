<Window x:Class="WSPPCars.wynajemSzczegoly"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WSPPCars"
        mc:Ignorable="d"
        Title="Szczegóły Wynajmu" Height="500" Width="800" Background="#FF202020">
    <Grid>
        <StackPanel Margin="30" VerticalAlignment="Center" HorizontalAlignment="Center" Width="500">
            <TextBlock Text="Szczegóły wynajmu" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#FFFF5D00" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>

            <TextBlock Text="Imię i nazwisko klienta:" Foreground="White" FontWeight="Bold"/>
            <TextBox x:Name="txtKlient" Margin="0,0,0,15" />

            <TextBlock Text="Samochód (marka/model):" Foreground="White" FontWeight="Bold"/>
            <TextBox x:Name="txtSamochod" Margin="0,0,0,15" />

            <TextBlock Text="Data wypożyczenia:" Foreground="White" FontWeight="Bold"/>
            <TextBlock x:Name="lblDataWypozyczenia" Foreground="White" Margin="0,0,0,15"/>

            <TextBlock Text="Data zwrotu:" Foreground="White" FontWeight="Bold"/>
            <TextBlock x:Name="lblDataZwrotu" Foreground="White" Margin="0,0,0,25"/>

            <Button x:Name="btnSzukaj" Content="Szukaj" 
                    Height="40" 
                    FontWeight="Bold" 
                    Foreground="Black"
                    Click="brnSzukaj_Click">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="#FFFF5D00"
                                BorderBrush="#EEEE4C00"
                                BorderThickness="2"
                                CornerRadius="15"
                                x:Name="border">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#DDDD4C00"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#DDDD4C00"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#DDDD4C00"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Window>
