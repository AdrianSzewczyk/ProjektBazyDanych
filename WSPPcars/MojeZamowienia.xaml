<Window x:Class="WSPPCars.MojeZamowienia"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Moje Zamówienia" Height="630" Width="1080" MinWidth="1080" MinHeight="550" WindowStartupLocation="CenterOwner"
        Background="#303030" FontFamily="Bahnschrift">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Moje zamówienia"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <Border Background="#202020"
                    BorderBrush="#FFFF5D00"
                    BorderThickness="2"
                    CornerRadius="10"
                    Padding="10">
                <ListView x:Name="ZamowieniaListView" Height="300"
                          BorderThickness="0"
                          Background="#202020"
                          Foreground="White"
                          SelectionMode="Single">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Numer zamówienia" Width="200" DisplayMemberBinding="{Binding NumerZamowienia}" />
                            <GridViewColumn Header="Data zamówienia" Width="200" DisplayMemberBinding="{Binding DataZamowienia}" />
                            <GridViewColumn Header="Status" Width="200" DisplayMemberBinding="{Binding Status}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>

            <Button Content="Zamknij"
                    Width="120"
                    Height="40"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0"
                    Click="BtnZamknij_Click"
                    FontWeight="Bold"
                    Foreground="Black">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#FFFF5D00"
                                CornerRadius="15"
                                BorderBrush="#EEEE4C00"
                                BorderThickness="2"
                                x:Name="border">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#DDDD4C00"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#DDDD4C00"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Window>
