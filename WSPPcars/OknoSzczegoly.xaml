<Window x:Class="WSPPCars.OknoSzczegoly"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WSPPCars"
        mc:Ignorable="d"
        Title="OknoSzczegoly" Height="540" Width="873" Background="#FF202020">
    <Grid>
        <StackPanel Margin="0,0,10,0">
            <!-- Nagłówek -->
            <TextBlock Text="Szczegóły samochodu"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#FFFF5D00"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,20"/>

            <Image Source="{Binding ImagePath}" Height="150" HorizontalAlignment="Center" Margin="10"/>
            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Foreground="#FFFF5D00"/>
            <TextBlock Text="{Binding Price, StringFormat=Cena: {0} PLN}" FontSize="14" HorizontalAlignment="Center" Foreground="White"/>

            <TextBlock Text="Specyfikacja:" FontWeight="Bold" FontSize="14" Margin="10" Foreground="White"/>
            <TextBlock Text="{Binding Doors, StringFormat=Ilość drzwi: {0}}" FontSize="12" Foreground="White"/>
            <TextBlock Text="{Binding EngineCapacity, StringFormat=Pojemność silnika: {0}}" FontSize="12" Foreground="White"/>
            <TextBlock Text="{Binding MaxPeople, StringFormat=Ilość osób: {0}}" FontSize="12" Foreground="White"/>
            <TextBlock Text="{Binding TransmissionType, StringFormat=Skrzynia biegów: {0}}" FontSize="12" Foreground="White"/>

            <Button x:Name="btnWynajmij" Content="Wynajmij"
                    Margin="10,20,10,0"
                    Height="40"
                    Width="150"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Foreground="Black" Click="btnWynajmij_Click"
                    >
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#FFFF5D00"
                                BorderBrush="#EEEE4C00"
                                BorderThickness="2"
                                CornerRadius="15"
                                x:Name="border">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#DDDD4C00"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#DDDD4C00"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#DDDD4C00"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Window>
