<Window x:Class="WSPPCars.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WSPPCars"
        mc:Ignorable="d"
        Title="WSPP CAR$ - wypożyczalnia samochodów" Height="554" Width="946" MinWidth="700" MinHeight="450" Background="#303030">
    <Window.Resources>
        <!-- Kompletny styl dla ScrollBar -->
        <Style TargetType="Thumb">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border Background="#FFFF5D00"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            CornerRadius="10" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="ScrollBar">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid>
                            <!-- Tło ScrollBar -->
                            <Rectangle Fill="#202020" />
                            <Border BorderBrush="Black" BorderThickness="0">
                            <Track Name="PART_Track" IsDirectionReversed="True">
                                <Track.DecreaseRepeatButton>
                                        <RepeatButton Command="ScrollBar.LineLeftCommand" Background="#101010" BorderThickness="0"/>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Background="#FFFF5D00" />
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                        <RepeatButton Command="ScrollBar.LineRightCommand" Background="#101010" BorderThickness="0"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="0,0,0,-6" Background="Black">
        <ListView x:Name="listboxOgloszenia" ItemsSource="{Binding CarAds}" Margin="10,137,264,20" MouseDoubleClick="listboxOgloszenia_MouseDoubleClick_1" Background="#202020" BorderBrush="#FFFF5D00">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="0">
                        <Image Source="{Binding ImagePath}" Width="160" Height="110" Margin="0"/>
                        <StackPanel Margin="5">
                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="18" Foreground="#FFFF5D00" FontFamily="Bahnschrift"/>
                            <TextBlock Text="{Binding Price, StringFormat=Cena: {0} PLN}" FontSize="14" Foreground="White"/>
                            <TextBlock Text="{Binding Doors, StringFormat=Ilość drzwi: {0}}" FontSize="14" Foreground="White"/>
                            <TextBlock Text="{Binding EngineCapacity, StringFormat=Pojemność silnika: {0}}" FontSize="14" Foreground="White"/>
                            <TextBlock Text="{Binding MaxPeople, StringFormat=Ilość osób: {0}}" FontSize="14" Foreground="White"/>
                            <TextBlock Text="{Binding TransmissionType, StringFormat=Skrzynia biegów: {0}}" FontSize="14" Foreground="White"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Image Source="C:/samochody/LOGO.png" HorizontalAlignment="Center" Height="115" VerticalAlignment="Top" Width="738" Margin="0,10,0,0"/>
        <StackPanel Margin="0,137,10,20" Background="#202020" HorizontalAlignment="Right" Width="233"/>
        <Border BorderBrush="#FFFF5D00" BorderThickness="1" Margin="0,137,10,20" HorizontalAlignment="Right" Width="233">
            <TextBlock Text="Filtry" TextAlignment="Center" FontWeight="Bold" FontSize="18" Foreground="#FFFFFF" FontFamily="Bahnschrift" Margin="0,10,0,0"/>
        </Border>
    </Grid>
</Window>
